<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tx"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbg"
    android:orientation="vertical"
    tools:context="cn.gtgs.base.playpro.activity.center.TXActivity">

    <include layout="@layout/layout_com_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_tx"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:entries="@array/zhType"
            />

        <EditText
            android:id="@+id/edt_tx_zh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:hint="请输入您的账号"
            android:background="@null"
            />


    </LinearLayout>

    <EditText
        android:id="@+id/edt_tx_count"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="140dp"
        android:hint="请输入提现金额"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:inputType="number"
        />

    <Button
        android:text="提现"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorwhite"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_rec_org"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/btn_tx_submit" />
</LinearLayout>
