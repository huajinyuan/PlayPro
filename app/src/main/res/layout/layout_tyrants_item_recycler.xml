<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorwhite"
    android:gravity="center_vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_tyrants_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="NO.2"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/img_center_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerInside" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_tyrants_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/circle_zhubo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tyrants_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:maxLength="10"
                android:maxLines="1"
                android:text="奥斯卡的"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/img_tyrants_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                app:srcCompat="@mipmap/global_male" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_l"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@drawable/background_green"
                android:drawableLeft="@mipmap/icon_diamond"
                android:gravity="center"
                android:maxLength="5"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="LV10"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/tv_item_g"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/background_org"
                android:drawableLeft="@mipmap/icon_diamond"
                android:gravity="center"
                android:maxLength="5"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="LV10"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/sp_10" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奉献黄钻"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_tyrants_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:maxLength="6"
            android:maxLines="1"
            android:text="456132"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_tyrants_follow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/praise_photo_button_image" />
</LinearLayout>
